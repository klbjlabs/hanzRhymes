{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "meteor": true
  },
  "globals": {
    "MyCollection": true,
    "moment": false
  },
  "plugins": [
    "meteor"
  ],
  "extends": [
    "airbnb",
    "plugin:meteor/recommended"
  ],
  "rules": {
    "no-underscore-dangle": 1,
    "comma-dangle": 0,
    "max-len": [1, { "code": 120, "tabWidth": 2, "ignoreUrls": true }],
    "no-unused-vars": 1,
    "import/no-unresolved": [
      2, { "ignore": ["^meteor/"] }
    ]
  }
}
